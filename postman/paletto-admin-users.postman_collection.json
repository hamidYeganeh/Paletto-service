{
  "info": {
    "name": "Paletto Services - Panel Users API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:50001" },
    { "key": "userId", "value": "" }
  ],
  "item": [
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Alice\",\"email\":\"alice@example.com\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/panel/users"
        }
      }
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/v1/panel/users/{{userId}}"
        }
      }
    },
    {
      "name": "Update User by ID",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Alice Cooper\"}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/panel/users/{{userId}}"
        }
      }
    },
    {
      "name": "Delete User by ID",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/v1/panel/users/{{userId}}"
        }
      }
    }
  ]
}